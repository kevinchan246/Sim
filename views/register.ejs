<%- include("../partials/header") %>

<div class="container">
    
    <div style="width: 50%; margin: 25px auto;">
        <h1> Creat Account</h1>
        <form action="/register" method="POST">
            <div class="form-group">
                <input type="text" class="form-control mt-4" name="displayName" placeholder="Enter the name you want to display" value="<%= typeof displayName != 'undefined' ? displayName : '' %>" required>

                <input type="email" class="form-control mt-4" name="username" placeholder="Enter email: example@mail.com" value="<%= typeof username != 'undefined' ? username : '' %>"  required>

                <input type="password" class="form-control mt-4" name="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>" required>
                 
                <input type="password" class="form-control mt-4" name="password2" placeholder="Confirm password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>

            
            </div>
            <div class="mt-2">
                
                <input type="submit" class="btn btn-success btn-sm" value="Sign Up">
                    
                <a href="/auth/google" class="btn btn-sm googleLoginBtn d-inline ml-2">
                    <i class="fab fa-google left"></i> Log in with Google
                </a>
                    
            </div>
            
           
        </form>
    </div>
</div>
<%- include("../partials/footer") %>