<%- include("../partials/header") %>

<div class="container" >
    
    <div style="width: 40%; margin: 25px auto;">
        
    
        <h1 class="text-center mb-4">Login</h1>


        <form action="/login" method="POST">
            <div class="form-group">
                <input type="text" class="form-control mt-2" name="username" placeholder="E-mail" required>
                <input type="password" class="form-control mt-2" name="password" placeholder="Password" required>
            </div>
            <div class="mt-2 text-left">
                <input type="submit" class="btn btn-success btn-sm mr-2" id="loginBtn" value="Login">
                <a href="/register" class="btn btn-info btn-sm">Sign Up</a>
            </div>
        </form>

        <div class="section">
            <a href="/auth/google" class="btn btn-sm googleLoginBtn mt-1">
                <i class="fab fa-google left"></i> Log in with Google
            </a>
        </div>

        <a href="/forgot">Forgot password</a>
    </div>

</div>




<%- include("../partials/footer") %>