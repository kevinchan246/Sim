<%- include("../../partials/header") %>


<div id="simCarouselIndicators" class="carousel slide"  data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#simCarouselIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#simCarouselIndicators" data-slide-to="1"></li>
      <li data-target="#simCarouselIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../../public/images/typing_machine_carouse.jpg" class="d-block w-100 carouseImg" alt="carouseImg1">
        <div class="carousel-caption ">
            <h1>Welcome to Sim</h1>
            <% if (currentUser) { %>
              <a href="/home/new" class="btn btn-secondary createbtn">Create New Blog</a>
            <% } else { %>  
              <a href="/register" class="btn btn-secondary createbtn">Get Started</a>
            <% } %>  
            <p class="carouseDescription1">Start your blog journey in the simplest way here</p>
          </div>
      </div>
      <div class="carousel-item">
        <img src="../../public/images/explore_carouse.jpg" class="d-block w-100 carouseImg" alt="carouseImg2">
        <div class="carousel-caption d-none d-md-block">
            <h2>Explore</h2>
            <p class="carouseDescription2">Explore Blogs Created by Other Bloggers</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="../../public/images/note_book.jpg" class="d-block w-100 carouseImg" alt="carouseImg3" >
        <div class="carousel-caption d-none d-md-block">
            <h2>Keep Track</h2>
            <p class="carouseDescription3">Follow your favorite writer</p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#simCarouselIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#simCarouselIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>



<div class="container">
  <h1 class="mt-4">Newest Articles</h1>
  <hr>
  <% blogs.forEach(blog => { %>
    <div class="media mt-4">
      <div class="media-body">
        <h2 class="mt-0 mb-1"><a href="/home/<%=blog.slug%>" class="text-dark"><%= blog.title %></a></h2>

        <div class="row ml-3 mt-3">
          <div class="row">
            <% if (blog.author.profileImg) { %>
              <img class="profileImg mr-1" src="<%= blog.author.profileImg%>">
            <% } else {%>
              <i class="far fa-lg fa-user profileImg"></i>
            <% } %>  
            <a href="/usershow/<%=blog.author.displayName%>" class="text-muted"><%= blog.author.displayName %>,</a>   
          </div>
          <p class="text-muted ml-3 float-left"> <%= blog.date.toDateString().substring(4) %> </p>
        </div>

        <% if (blog.sanitizedHtml.length > 250) { %> 
          <p><%- blog.sanitizedHtml.substring(0,250) %>......</p>
          <a href="/home/<%=blog.slug%>" class="text-dark">Read More</a>
        <% } else{ %>
          <p><%- blog.sanitizedHtml %></p>
        <% } %> 
      </div>   
      <% if (blog.coverImg) { %> 
          <img src="<%=blog.coverImg%>" class="ml-4 previewCover align-self-center" alt="Cover Image">
      <% } %>  
        
          
      
      
    </div>
    <hr>
  <% }); %>  
</div>


<%- include("../../partials/footer") %>

